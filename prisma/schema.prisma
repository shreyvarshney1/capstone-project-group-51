generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  role          Role      @default(USER)
  phone         String?
  avatar        String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  reports       Report[]
  assignedReports Report[] @relation("AssignedReports")
  comments      Comment[]
  
  @@map("users")
}

model Report {
  id            String   @id @default(cuid())
  title         String
  description   String
  category      Category
  latitude      Float
  longitude     Float
  address       String?
  imageUrl      String?
  status        Status   @default(PENDING)
  priority      Priority @default(MEDIUM)
  urgency       Int      @default(3) // 1-5 scale
  
  // Relations
  userId        String   @map("user_id")
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  departmentId  String?  @map("department_id")
  department    Department? @relation(fields: [departmentId], references: [id])
  assignedToId  String?  @map("assigned_to_id")
  assignedTo    User?    @relation("AssignedReports", fields: [assignedToId], references: [id])
  comments      Comment[]
  
  // Timestamps
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  acknowledgedAt DateTime?
  inProgressAt  DateTime?
  resolvedAt    DateTime?
  
  // Escalation tracking
  escalationLevel Int @default(0) // 0 = ward, 1 = department, 2 = municipal
  lastEscalatedAt DateTime?
  
  @@index([status, category])
  @@index([latitude, longitude])
  @@index([createdAt])
  @@map("reports")
}

model Department {
  id          String   @id @default(cuid())
  name        String   @unique
  email       String
  description String?
  hierarchyLevel Int @default(0) // 0 = ward, 1 = department, 2 = municipal
  isActive    Boolean  @default(true)
  
  // Relations
  reports     Report[]
  
  @@map("departments")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  isPublic  Boolean  @default(true) // If false, it's an internal note
  reportId  String   @map("report_id")
  report    Report   @relation(fields: [reportId], references: [id], onDelete: Cascade)
  authorId  String   @map("author_id")
  author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([reportId])
  @@index([createdAt])
  @@map("comments")
}

enum Role {
  USER
  WARD_OFFICER
  DEPARTMENT_HEAD
  ADMIN
}

enum Status {
  PENDING
  ACKNOWLEDGED
  IN_PROGRESS
  RESOLVED
  REJECTED
  ESCALATED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum Category {
  SANITATION
  ROADS_AND_SIDEWALKS
  STREETLIGHTS
  PARKS_AND_RECREATION
  WATER_AND_SEWAGE
  TRAFFIC_SIGNALS
  GRAFFITI
  NOISE_POLLUTION
  ILLEGAL_PARKING
  OTHER
}